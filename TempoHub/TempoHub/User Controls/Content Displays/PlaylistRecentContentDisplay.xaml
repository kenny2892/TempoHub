<UserControl x:Class="TempoHub.User_Controls.Content_Displays.PlaylistRecentContentDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TempoHub.User_Controls.Content_Displays"
             xmlns:User_Controls="clr-namespace:TempoHub.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="640" d:DesignWidth="640">

    <Grid x:Name="mainGrid">
        <User_Controls:PlaylistDisplay DataContext="{Binding PlaylistDisplayVm}" Margin="0,10,0,0" PlayClick="OnPlayBtnClick" ShuffleClick="OnShuffleBtnClick" AddClick="OnAddBtnClick" OrderChanged="OnOrderChanged" SongRemoved="OnSongRemoved" />
    </Grid>
</UserControl>
