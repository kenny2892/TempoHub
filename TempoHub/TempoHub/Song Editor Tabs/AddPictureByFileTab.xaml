<UserControl x:Class="TempoHub.Song_Editor_Tabs.AddPictureByFileTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TempoHub.Song_Editor_Tabs"
             xmlns:uc="clr-namespace:TempoHub.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="450">
    
    <Grid x:Name="picByFileGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button Content="Select a File" Click="OnSelectFileClick"/>
        <uc:EditorPicture x:Name="picByFilePreviewImage" Grid.Row="1" Margin="20,10,20,20" Width="{Binding ActualWidth, ElementName=picByFileGrid, Mode=OneWay}" Height="{Binding ActualWidth, ElementName=picByFileGrid, Mode=OneWay}" />
    </Grid>
</UserControl>
