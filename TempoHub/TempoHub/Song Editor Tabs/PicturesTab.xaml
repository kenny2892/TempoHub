<UserControl x:Class="TempoHub.Song_Editor_Tabs.PicturesTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TempoHub.Song_Editor_Tabs"
             xmlns:uc="clr-namespace:TempoHub.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="450">
    
    <Grid x:Name="pircutresGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Button x:Name="addPictureBtn" Content="Add Picture" Padding="10,6,10,6" Margin="0,0,10,0" Width="120" Click="OnAddPictureClick" Height="27.3"/>

        <ScrollViewer x:Name="pictureScrollView" Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="0,0,0,20">
            <StackPanel x:Name="pictureOptionsStackPanel" Orientation="Horizontal">

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
